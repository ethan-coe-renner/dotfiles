#
# Modus color theme
#

set notification-error-bg       "#ff8059" # Red
set notification-error-fg       "#ffffff" # Foreground
set notification-warning-bg     "#d0bc00" # Orange
set notification-warning-fg     "#595959" # Selection
set notification-bg             "#000000" # Background
set notification-fg             "#ffffff" # Foreground

set completion-bg               "#000000" # Background
set completion-fg               "#2fafff" # Comment
set completion-group-bg         "#000000" # Background
set completion-group-fg         "#2fafff" # Comment
set completion-highlight-bg     "#44475a" # Selection
set completion-highlight-fg     "#ffffff" # Foreground

set index-bg                    "#000000" # Background
set index-fg                    "#ffffff" # Foreground
set index-active-bg             "#595959" # Current Line
set index-active-fg             "#ffffff" # Foreground

set inputbar-bg                 "#000000" # Background
set inputbar-fg                 "#ffffff" # Foreground
set statusbar-bg                "#000000" # Background
set statusbar-fg                "#ffffff" # Foreground

set highlight-color             "#d0bc00" # Orange
set highlight-active-color      "#ff79c6" # Pink

set default-bg                  "#000000" # Background
set default-fg                  "#ffffff" # Foreground

set render-loading              true
set render-loading-fg           "#000000" # Background
set render-loading-bg           "#ffffff" # Foreground

#
# Recolor mode settings
#

set recolor-lightcolor          "#000000" # Background
set recolor-darkcolor           "#ffffff" # Foreground

#
# Startup options
#
set adjust-open width
# set recolor true

set font	"Fira Code 9"
set window-title-basename	"true"
set selection-clipboard "clipboard"